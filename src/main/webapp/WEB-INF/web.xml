<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>T7E2</display-name>
  <servlet>
        <servlet-name>ServletPrepararProductos</servlet-name>
        <servlet-class>servlet.ServletPrepararProductos</servlet-class>
        <init-param>
        	<param-name>ficheroProductos</param-name>
        	<param-value>txt/productos.txt</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPrepararProductos</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>